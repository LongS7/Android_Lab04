<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/shop_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/shop_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Tên sản phẩm"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@id/shop_image"
        app:layout_constraintTop_toTopOf="@id/shop_image" />

    <TextView
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop:"
        app:layout_constraintTop_toBottomOf="@id/shop_description"
        app:layout_constraintStart_toStartOf="@id/shop_description"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Shop name"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@id/shop"
        app:layout_constraintTop_toTopOf="@id/shop" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:text="Chat"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/shop_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/shop_image" />

</androidx.constraintlayout.widget.ConstraintLayout>